<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary"
    tools:context=".ProfilDataActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:id="@+id/ll_aktifityprofil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/cardview_light_background">


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimary">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_bingkaifoto"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="@color/cardview_light_background"
                        android:layout_gravity="center"
                        app:cardCornerRadius="50dp"/>
                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="20dp"
                        android:text="Theo Galang Saputra"
                        android:textColor="@color/cardview_light_background"
                        android:textStyle="bold"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_namaprofil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Nama"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark">
                </TextView>
                <TextView
                    android:id="@+id/tv_isinama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="7dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:background="@color/formcolor"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginEnd="20dp" />
            <TextView
                android:id="@+id/tv_usernameprofil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="Username"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark">
            </TextView>
            <TextView
                android:id="@+id/tv_isiusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="7dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@color/formcolor"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/tv_nohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="Nomor Handphone"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark">
            </TextView>
            <TextView
                android:id="@+id/tv_isino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="7dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@color/formcolor"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="Email"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark">
            </TextView>
            <TextView
                android:id="@+id/tv_isiemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="7dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@color/formcolor"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/tv_nik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="NIK"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/tv_isinik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="7dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@color/formcolor"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/tv_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="Kategori Akun"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark">
            </TextView>
            <TextView
                android:id="@+id/tv_isikategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="100dp"
                android:paddingLeft="7dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@color/formcolor"
                android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
    </ScrollView>
        <include layout="@layout/bottom_nav"/>
</RelativeLayout>